{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": ["es5", "dom"],
      "outDir": "./dist",
      "rootDir": "./src",
      "declaration": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "esModuleInterop": true
    },
    "include": [
      "./src/**/*.ts"
    ],
    "exclude": [
      "./node_modules"
    ]
  }
  